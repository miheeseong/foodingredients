<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false"><!--상태 : 비정상상태일때-->
        <shape><!--모양-->
            <solid android:color="@android:color/darker_gray"><!--색깔-->

            </solid>

        </shape>
    </item>
    <item android:state_pressed="true"><!--상태 : 눌렀을때-->
        <shape><!--모양-->
            <solid android:color="@color/colorAccent"><!--색깔-->

            </solid>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/><!--색깔-->
            <stroke android:width="2dip" android:color="@color/colorPrimary"/>

        </shape>
    </item>
</selector>

